<% layout("./layouts/boilerplate.ejs") %>

<body>
    <div class="container-fluid">
        <div class="row">
            <h2>Details</h2>
            <div class="col-md-6">
                <img src="/images/<%= listing.image %>" class="img-fluid rounded"
                style="height: 20rem; width: 100%;">
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <li><%= listing.title %></li>
                <li><%= listing.description %></li>
                <li><%= listing.country %></li>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <button class="btn btn-dark">EDIT</button>
            </div>
            <div class="col-md-3">
                <button class="btn btn-danger">DELETE</button>
            </div>
        </div>
    </div>
</body>