<% layout("./layouts/boilerplate.ejs") %>

    <div class="container mt-2 mb-2 px-5 pt-2 rounded-pill" style="background-color: rgb(229, 240, 240);">
        <div class="row d-flex justify-content-evenly">
            <div class="col-md-1">
                <p><i>Photos</i></p>
            </div>

            <div class="col-md-1">
                <p><i>illustration</i></p>
            </div>

            <div class="col-md-1">
                <p><i>SnapBox+</i></p>
            </div>

            <div class="col-md-1">
                <p><i>Wallpapers</i></p>
            </div>

            <div class="col-md-1">
                <p><i>Nature</i></p>
            </div>

            <div class="col-md-1">
                <p><i>Travel</i></p>
            </div>

            <div class="col-md-2">
                <p><i>Architecture & Interiors</i></p>
            </div>

            <div class="col-md-2">
                <p><i>Textures & Patterns</i></p>
            </div>

            <div class="col-md-2">
                <p><i>Street Photography</i></p>
            </div>
        </div>
    </div>


    <% if (success && success.length) { %>
        <div class="alert alert-info alert-dismissible fade show mt-2 mb-2" role="alert">
            <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>

            <body>
                <h1
                    class="mt-3 p-2 position-relative py-2 px-4 text-bg border border-secondary rounded-pill fs-3 border-3">
                    Gallery</h1>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-11">
                            <form action="/listing/new" method="get">
                                <button class="btn btn-lg float-sm-end mt-2 fs-6 fw-semibold"
                                    style="background-color: #FF7F50;"><i class="fa-solid fa-cloud-arrow-up"></i>
                                    Upload</button>
                            </form>
                        </div>
                    </div>
                </div>


                <div class="container-fluid m-2 justify-content-center d-flex align-items-center p-3">
                    <div class="row row-cols-lg-3 d-flex row-cols-md-2 row-cols-sm-1">
                        <% for(let list of allListings) { %>
                            <div class="card m-3 p-2 shadow-sm border border-2"
                                style="width: 23rem; background-color: #073868ee;">
                                <a href="/listing/<%= list.id %>" class="text-decoration-none">
                                    <img src="<%= list.image.url %>" class="card-img-top rounded" alt="..."
                                        style="height:20rem;">
                                </a>
                                <div class="card-body text-decoration-none">
                                    <h5 class="card-title fs-5 fw-semibold text-white">
                                        <%= list.title %>
                                    </h5>

                                    <div class="row d-flex justify-content-between">
                                        <div class="col-md-10">
                                            <p class="card-text fs-6 fw-semibold btn btn-dark">
                                                <%= list.country %>
                                            </p>
                                        </div>

                                        <div class="col-md-2">
                                            <button class="download-btn btn btn-warning"
                                                data-url="<%= list.image.url %>"><i
                                                    class="fa-solid fa-download"></i></button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </body>