<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-2">
            <h2>Edit Your Details</h2>
            <form action="/listing/edit/<%= listing._id %>?_method=PUT" method="POST">
                <div class="mt-3 mb-3">
                    <label for="title" class="form-label fw-semibold">Title</label>
                    <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control">
                </div>
                <div class="mt-3 mb-3">
                    <label for="description" class="form-label fw-semibold">Description</label>
                    <textarea name="listing[description]" cols="30" rows="3" class="form-control"><%= listing.description %></textarea>
                </div>
                <div class="mt-3 mb-3">
                    <label for="image" class="form-label fw-semibold">Image URL/Link</label>
                    <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control">
                </div>
                <div class="row">
                    <div class="mt-3 mb-3 col-md-8">
                        <label for="country" class="form-label fw-semibold">Country</label>
                        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control">
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <label for="location" class="form-label fw-semibold">Location</label>
                    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control">
                </div>
                <button type="submit" class="btn btn-dark mt-3 mb-3 fw-semibold">EDIT</button>
                <!-- <div class="col-md-1"> -->
                    <a href="/home/<%= listing._id %>/" class="mt-2 mb-2">
                      <button type="button" class="btn btn-danger"> &#x2B8C; Back</button>
                    </a>
                <!-- </div>   -->
            </form>
        </div>
    </div>
</body>
