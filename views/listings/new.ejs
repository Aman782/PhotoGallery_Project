<% layout("./layouts/boilerplate.ejs") %>
<body>
     <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mt-3">
                <h2>Upload new memories</h2>
                <form action="/listing/new" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mt-3 mb-3">
                        <label for="title" class="form-label fw-bold">Title</label>
                        <input type="text" name="listing[title]" placeholder="enter title" class="form-control border-3" required>
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="description" class="form-label fw-bold">Description</label>
                        <input type="text" name="listing[description]" placeholder="enter description" class="form-control border-3" required>
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="image" class="form-label fw-bold">Upload Image</label>
                        <input type="file" name="listing[image]" class="form-control border-3" required>
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="location" class="form-label fw-bold">Location</label>
                        <input type="text" name="listing[location]" placeholder="enter location" class="form-control border-3" required>
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="country" class="form-label fw-bold">Country</label>
                        <input type="text" name="listing[country]" placeholder="enter country" class="form-control border-3" required>
                    </div>

                   <div class="row">
                     <div class="col-md-3 d-flex justify-content-evenly">
                        <button type="reset" class="btn btn-dark">Reset</button>
                        <button type="submit" class="btn btn-success">Submit</button>
                     </div>
                   </div>
                </form>

            </div>
        </div>
     </div>
</body>
