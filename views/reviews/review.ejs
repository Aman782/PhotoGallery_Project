<% layout('./layouts/boilerplate.ejs') %>

  <body>
    <h2 class="mt-2 mb-2">Create a Review</h2>
    <div class="container-fluid">
      <div class="row d-flex">
        <div class="col-md-11">
          <form action="/listing/<%= listing._id %>/reviews" method="post" novalidate
            class="needs-validation mt-2 mb-2">
            <div class="mt-3 mb-3">
              <label for="rating" class="fs-5 fw-semibold">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" required>
            </div>

            <div class="mt-3 mb-3">
              <label for="comment" class="fs-5 fw-semibold">Comments</label><br>
              <textarea name="review[comment]" cols="60" rows="6" class="p-2 border-3 rounded" required></textarea>
            </div>

            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </div>
   
        <div class="col-md-1">
          <a href="/listing/<%= listing._id %>/" class="mt-2 mb-2">
            <button type="button" class="btn btn-danger"> &#x2B8C; Back</button>
          </a>
        </div>  
      </div>
    </div>
  </body>