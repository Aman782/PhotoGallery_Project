<% layout("./layouts/boilerplate.ejs") %>
<body>
    <h1 class="mt-3 p-2 position-relative py-2 px-4 text-bg-secondary border border-secondary rounded-pill fs-3">Gallery</h1>

     <div class="container">
        <div class="row">
            <div class="col-md-11">
                <form action="/listing/new" method="get" >
                    <button class="btn btn-lg btn-success float-sm-end mt-2 fs-6 fw-semibold">Upload Here!</button>
                </form>
            </div>
        </div>
     </div>

    <div class="container-fluid m-3 justify-content-center d-flex align-items-center p-3">
        <div class="row row-cols-lg-3 d-flex row-cols-md-2 row-cols-sm-1">
            <% for(let list of allListings){ %>
                <a href="/home/<%= list.id %>" class="text-decoration-none">
                    <div class="card m-2 p-2 shadow-sm border border-2" style="width: 19rem;">
                        <img src="/images/<%= list.image %>" class="card-img-top rounded" alt="..." style="height: 18rem;">
                        <div class="card-body txt-dec">
                            <h5 class="card-title fw-bold"><%= list.title %></h5>
                            <p class="card-text fw-semibold btn btn-primary"><%= list.country %></p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </div>
</body>
